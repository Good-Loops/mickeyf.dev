{
  "hosting": {
        "public": "/frontend/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
           {
             "source": "**",
             "destination": "/frontend/public/index.html"
            }
        ],
        "redirects": [
            {
                "source": "http://www.mickeyf.org",
                "destination": "https://mickeyf.org",
                "type": 301
            },
            {
                "source": "http://mickeyf.org",
                "destination": "https://mickeyf.org",
                "type": 301
            },
            {
                "source": "https://www.mickeyf.org",
                "destination": "https://mickeyf.org",
                "type": 301
            }
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Strict-Transport-Security",
                        "value": "max-age=31536000; includeSubDomains; preload"
                    },
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' data: https://mickeyf.org; worker-src 'self' blob: https://mickeyf.org;"
                    },
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    },
                    {
                        "key": "X-Frame-Options",
                        "value": "DENY"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "max-age=7200"
                    }
                ]
            }
        ]
    }
}
