{
    "name": "mickeyf-frontend",
    "version": "0.1.44",
    "description": "Frontend for mickeyf.org",
    "scripts": {
        "dev": "webpack --mode development --watch",
        "prod": "webpack --mode production",
        "build:sass": "sass  --no-source-map ./sass/style.scss:public/assets/css/style.min.css",
        "copy:assets": "copyfiles -u 1 ./public/assets/**/* public",
        "copy:html": "copyfiles -u 1 ./public/index.html public",
        "copy": "npm-run-all --parallel copy:*",
        "watch:assets": "onchange \"/public/assets/**/*\" -- npm run copy:assets",
        "watch:html": "onchange \"public/index.html\" -- npm run copy:html",
        "watch:sass": "sass  --no-source-map --watch ./sass/style.scss:public/assets/css/style.min.css",
        "watch": "npm-run-all --parallel watch:*",
        "start": "npm-run-all copy --parallel watch",
        "build": "npm-run-all copy:html build:*",
        "postbuild": "postcss public/assets/css/style.min.css -u autoprefixer cssnano -o public/assets/css/style.min.css --no-map"
    },
    "dependencies": {
        "alpinejs": "^3.13.8",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^4.19.2",
        "http-proxy-middleware": "^3.0.0",
        "page": "^1.11.6",
        "pitchy": "^4.0.7",
        "pixi.js": "^8.1.1",
        "sweetalert2": "^11.10.8",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "webpack": "^5.81.0",
        "webpack-cli": "^5.0.2",
        "webpack-dev-server": "^5.0.4"
    },
    "devDependencies": {
        "@types/alpinejs": "^3.13.10",
        "@types/page": "^1.11.9",
        "@types/pixi.js": "^5.0.0",
        "autoprefixer": "^10.4.2",
        "copyfiles": "^2.4.1",
        "cssnano": "^5.0.17",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "postcss-cli": "^9.1.0",
        "sass": "^1.49.8"
    }
}
