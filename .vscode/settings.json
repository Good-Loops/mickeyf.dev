{
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "back",
                    "commands": [
                        "npm run back"
                    ]
                },
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "compiler",
                    "commands": [
                        "npm run dev"
                    ]
                },
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "server",
                    "commands": [
                        "sleep 4s && npm run server"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "bash",
                    "commands": [
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'green~'",
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'cyan~'",
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'red~'",
                        "sleep 2s && xdotool key '{F12}' && clear",
                    ]
                }
            ]
        }
    ],
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/assets/css",
        },
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/assets/css",
        }
    ],
    "liveSassCompile.settings.includeItems": [
        "/assets/sass/style.scss"
    ]
}