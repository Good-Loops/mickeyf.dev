{
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "compiler",
          "commands": [
            "npm run dev"
          ]
        },
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "server",
          "commands": [
            "sleep 2s",
            "npm run server"
          ]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "ui", 
          "commands": [
                "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'green~'",
                "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'cyan~'",
                "xdotool key '^{PGUP}' && xdotool key '^{F4}'",
            ]
        }
      ]
    }
  ]
}