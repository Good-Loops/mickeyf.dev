{
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "front-compiler",
                    "commands": [
                        "cd frontend && sleep 4s && npm run build"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "front-server",
                    "commands": [
                        "cd frontend && sleep 4s && npm run serve"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "back-compiler",
                    "commands": [
                        "cd backend && sleep 4s && npm run dev"
                    ]
                },
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "back-server",
                    "commands": [
                        "cd backend && sleep 4s && npm run server"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "temp-bash",
                    "commands": [
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'yellow~'",
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'red~'",
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'green~'",
                        "xdotool key '^{PGUP}' && xdotool key '^+j' && xdotool key 'cyan~'",
                        "exit",
                    ]
                }
            ]
        }
    ],
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/frontend/public/assets/css",
        },
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/frontend/public/assets/css",
        }
    ],
    "liveSassCompile.settings.includeItems": [
        "/frontend/public/assets/sass/style.scss"
    ]
}